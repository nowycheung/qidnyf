<div class="header B-gray P-16">
    <div class="pure-menu pure-menu-horizontal">
        
        <ul class="pure-menu-list W-100">
            <li class="pure-menu-item B-gray"><a href="/" class="pure-menu-link">Home</a></li>
            <li class="pure-menu-item B-gray"><a href="/items" class="pure-menu-link">Products List</a></li>
            <li class="pure-menu-item pure-menu-active B-gray"><a href="/costumer" class="pure-menu-link">My Cart</a></li>
            {{#if id}}
            <li class="pure-menu-item B-gray"><a href="/costumer?action=logout" class="pure-menu-link">Logout</a></li>
            {{else}}
            <li class="pure-menu-item B-gray"><a href="/costumer?action=login" class="pure-menu-link">Login</a></li>
            {{/if}}
        </ul>
    </div>
</div>

<div class="content B-gray P-16">
    {{#if actionLogin}}
        <div class="W-80 D-ib">
            <h2 class="Ta-c">Login</h2>
            <form action="/costumer" class="pure-form  pure-form-aligned">
                <fieldset>
                    <div class="Ta-c P-10">
                        <label for="email" class="L-screen">Email</label>
                        <input type="text" name="email" value="{{email}}" placeholder="your@email.com">
                    </div>
                    <div class="Ta-c P-10">
                        <a class="pure-button" href="/items">Cancel</a>
                        <input type="submit" value="Submit" class="pure-button pure-button-primary">
                    </div>
                    <input type="hidden" name="action" value="login">
                </fieldset>
            </form>
        <div>
    {{/if}}

    {{#if actionNew}}
    <div class="W-100">
        <div class="W-60 D-ib">
            <h2 class="Ta-c">Register</h2>
            <form action="/costumer" class="pure-form  pure-form-aligned">
                <fieldset>
                    <div class="pure-control-group">
                        <label for="name">Name</label>
                        <input type="text" name="name" placeholder="fullname">
                    </div>
                    <div class="pure-control-group">
                        <label for="email">Email</label>
                        <input type="text" name="email" placeholder="your@email.com">
                    </div>

                    <div class="Ta-c P-10">
                        <input type="hidden" name="action" value="save">
                        <a class="pure-button" href="/items">Cancel</a>
                        <input type="submit" value="Submit" class="pure-button pure-button-primary">
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="W-30 B-gray P-10 D-ib L-screen Bc-gray Bdr-10">
            <strong>or</strong> <h2 class="Ta-c">Login</h2>
            <form action="/costumer" class="pure-form  pure-form-aligned">
                <fieldset>
                    <div class="Ta-c P-10">
                        <input type="text" name="email" placeholder="your@email.com">
                        
                    </div>
                    
                    <div class="Ta-c P-10">

                        <a class="pure-button" href="/items">Cancel</a>
                        <input type="submit" value="Submit" class="pure-button pure-button-primary">
                        <input type="hidden" name="action" value="login">
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
    {{/if}}

    {{#if actionView}}
        <p>Welcome {{name}}, below is your shopping cart details</p>
        <table class="pure-table W-100">
            <thead>
                <tr>
                    <th class="L-screen">Image</th>
                    <th>Brand</th>
                    <th class="L-screen">Description</th>
                    <th class="M-screen">Price</th>
                    <th>Remove</th>
                </tr>
            </thead>

            <tbody id="card-item">
                <tr><td colspan="5" class="Ta-c"><img src="http://sierrafire.cr.usgs.gov/images/loading.gif" class="W-20"></td></tr>
            </tbody>

        </table>
        <script type="text/javascript">
            if (F) {
                F.loadItem({items:[{{cart}}], targetNode:"#card-item"})
            }
        </script>
    {{/if}}

</div>